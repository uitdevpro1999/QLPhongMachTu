<Window x:Class="QLPM.xoaBenh"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLPM"
        mc:Ignorable="d"
        Title="xoaBenh" Height="450" Width="800">
    <Grid>
        <Button x:Name="xoa" Content="Xóa" HorizontalAlignment="Left" VerticalAlignment="Top" Width="101" Margin="324,105,0,0" Height="55" Click="xoa_Click"/>
        <DataGrid x:Name="grid" HorizontalAlignment="Left" Height="194" Margin="10,216,0,0" VerticalAlignment="Top" Width="774" AutoGenerateColumns="False" DataContext="{Binding ElementName=maBenh}" SelectionChanged="grid_SelectionChanged">
            <DataGrid.Columns >
                <DataGridTextColumn Binding="{Binding maBenh}" Header="Mã loại bệnh" Width="320"/>
                <DataGridTextColumn Binding="{Binding tenBenh}" Header="Tên loại bệnh" Width="480"/>
            </DataGrid.Columns>


        </DataGrid>
    </Grid>
</Window>
