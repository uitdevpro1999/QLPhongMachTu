<Window x:Class="QLPM.Xoa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLPM"
        mc:Ignorable="d"
        Title="Xóa Bệnh Nhân" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="grid" HorizontalAlignment="Left" Height="194" Margin="10,216,0,0" VerticalAlignment="Top" Width="774" AutoGenerateColumns="False" DataContext="{Binding ElementName=maBN}" SelectionChanged="grid_SelectionChanged">
            <DataGrid.Columns >
                 
                <DataGridTextColumn Binding="{Binding maBN}" Header="Mã Bệnh Nhân" Width="90"/>
                <DataGridTextColumn Binding="{Binding tenBN}" Header="Họ Tên" Width="220"/>
                <DataGridTextColumn Binding="{Binding GioiTinh}" Header="Giới Tính" Width="80"/>
                <DataGridTextColumn Binding="{Binding NgaySinh}" Header="Ngày Sinh" Width="80"/>
                <DataGridTextColumn Binding="{Binding DiaChi}" Header="Địa Chỉ" Width="160"/>

            </DataGrid.Columns>


        </DataGrid>
        <Button Content="Xóa" x:Name="xoa" IsEnabled="False" HorizontalAlignment="Left" Height="52" Margin="258,69,0,0" VerticalAlignment="Top" Width="222" Click="xoa_Click"/>
    </Grid>
</Window>
