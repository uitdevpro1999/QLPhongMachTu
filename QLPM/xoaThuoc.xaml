<Window x:Class="QLPM.xoaThuoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLPM"
        mc:Ignorable="d"
        Title="xoaThuoc" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="grid" HorizontalAlignment="Left" Height="186" Margin="10,224,0,0" VerticalAlignment="Top" Width="774" AutoGenerateColumns="False" DataContext="{Binding ElementName=maThuoc}" SelectionChanged="grid_SelectionChanged">

            <DataGrid.Columns >

                <DataGridTextColumn Binding="{Binding maThuoc}" Header="Mã Thuốc" Width="90"/>
                <DataGridTextColumn Binding="{Binding tenThuoc}" Header="Tên Thuốc" Width="220"/>
                <DataGridTextColumn Binding="{Binding DVT}" Header="Đơn vị tính" Width="80"/>
                <DataGridTextColumn Binding="{Binding CachDung}" Header="Cách Dùng" Width="80"/>
                <DataGridTextColumn Binding="{Binding Dongia}" Header="Đơn Giá" Width="160"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="xoa" Content="Xóa" HorizontalAlignment="Left" Height="39" Margin="284,100,0,0" VerticalAlignment="Top" Width="191"/>

    </Grid>
</Window>
