        <Label Content="Ngày Khám:" HorizontalAlignment="Left" Margin="91.662,42,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Triệu Chứng: " HorizontalAlignment="Left" Margin="85,104,0,0" VerticalAlignment="Top"/>
